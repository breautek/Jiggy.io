// This is a config purely used for development editors. Using this config to compile will not emit or compile files.

{
    "compilerOptions": {
        "outDir": "../dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "module": "commonjs",
        "target": "es2015",
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "allowUnreachableCode": false
    }
}